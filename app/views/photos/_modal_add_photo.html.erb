<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="userodalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_for @photo , multipart: true, remote: true do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="userModalLabel">Bild zu Etappe hinzuf√ºgen</h4>
        </div>
        <div class="modal-body">
          <%= hidden_field_tag :leg, leg.id %>
          <div class="form-group">
            <%= f.file_field :image %>
          </div>
          <div class="form-group">
            <%= f.label :title, class: "control-label" %>
            <%= f.text_field :title, {class: "form-control"} %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit nil, {class: "btn btn-success"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
