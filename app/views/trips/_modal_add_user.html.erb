<div class="modal fade" id="userModal-<%= tripid %>" tabindex="-1" role="dialog" aria-labelledby="userodalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_tag add_user_trip_path(tripid) do %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="userModalLabel">Teilnehmer hinzufügen</h4>
        </div>
        <div class="modal-body">
          <%= select_tag "user", options_from_collection_for_select(@users, "id", "name"), class: 'form-control' %>
        </div>
        <div class="modal-footer">
          <%= submit_tag 'Hinzufügen', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
