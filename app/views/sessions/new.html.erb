<h1>Anmelden</h1>

<%= form_tag '/login', class: 'form-horizontal' do %>
  <div class="form-group">
    <%= label_tag :name, 'Name', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= text_field_tag :name, params[:name], {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, 'Passwort', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= password_field_tag :password, params[:password], {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "Anmelden", {class: "btn btn-primary"} %>
    </div>
  </div>
<% end %>
